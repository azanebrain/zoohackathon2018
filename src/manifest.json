{
  "name": "CONSCIOUS CONSUMER",
  "version": 0,
  "description": "Point of Sale Impact Education Tool for Online Consumers",
  "permissions": [
    "activeTab",
    "cookies",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "page": "pages/background.html",
    "persistent": true
  },
  "content_scripts": [
    { 
      "js": [
        "pages/content.js"
      ],
      "matches": ["<all_urls>"],
      "run_at" :"document_end"
    }
  ],
  "options_page": "pages/options.html",
  "browser_action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "images/Logo-16px.png",
      "32": "images/Logo-32px.png",
      "48": "images/Logo-48px.png",
      "128": "images/Logo-128px.png"
    }
  },
  "icons": {
    "16": "images/Logo-16px.png",
    "32": "images/Logo-32px.png",
    "48": "images/Logo-48px.png",
    "128": "images/Logo-128px.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com; object-src 'self';"
}
